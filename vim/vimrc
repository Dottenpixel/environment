"""""""""""""""""""""""""""""""
"                             "
"      Custom Functions       "
"                             "    
"""""""""""""""""""""""""""""""
function! CheckExpandable()
  if neocomplcache#sources#snippets_complete#expandable()
    call feedkeys("\<Plug>(neocomplcache_snippets_force_expand)")
  endif

  return ''
endfunction

function! SnippetOrCR()
  if pumvisible()
    call feedkeys("\<C-R>=CheckExpandable()\<CR>")
    return neocomplcache#close_popup()
  endif
  return "\<CR>"
endfunction

function! SnippetOrTab()
  if neocomplcache#sources#snippets_complete#expandable()
    call feedkeys("\<Plug>(neocomplcache_snippets_jump)")
    return ''
  endif

  return "\<TAB>"
endfunction


"check for backsapce. Used to cancel auto complete
function! s:check_back_space()
  let col = col('.') - 1
  return !col || getline('.')[col - 1] =~ '\s'
endfunction

"Clean trailing whitespace on save
fun! <SID>StripTrailingWhitespaces()
  let l = line(".")
  let c = col(".")
  %s/\s\+$//e
  call cursor(l, c)
endfun

"Format JSON
fun! PrettyJSON()
  :%!python -m simplejson.tool
  set filetype=json
endfun

